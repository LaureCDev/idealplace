<div class="container">
  <h1>Ideal Place </h1>
  <h2 style> Where your event begins </h2>


  <div class="row">
    <div class="col-sm-12">
     <!-- <div class="flash flash-success alert alert-dismissible fade show" role="alert">
        <span><strong>Yay!</strong> ðŸŽ‰ You have successfully created your event! Let's continue.</span>
          <a data-bs-dismiss="alert" aria-label="Close">
            <i class="fas fa-times"></i>
          </a>
      </div>
      -->
      <br>
    </div>
  </div>

  <h3> Event current recapitulative </h3>
  <p> The event called "<%= @event.name %>" will take place on <%= @event.date %> at <%= @event.start_time %> </p>
  <p> You invited your friends from group " "</p>
  <div class="d-flex bottom-top-margin">
    <!-- the persue choice/button should remove the buttons : delete and update  -->
    <button class="btn btn-success custom-margin"> Pursue event organization </button>

    <!-- update should direct to the edit event page -->
    <button class="btn btn-warning custom-margin"> Edit event </button>

    <!-- delete should destroy the event and bring back to the index page ? -->
    <button class="btn btn-danger custom-margin"> Cancel event </button>
    <%= link_to "Event Places", event_event_places_path(@event), class: "btn btn-info custom-margin" %>
  </div>

  <div style="width: 100%; height: 600px;"
    data-controller="map"
    data-map-markers-value="<%= @markers.to_json %>"
    data-map-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>">
  </div>

  <p class="custom-margin"> Please select a type of event </p>

  <button class="btn btn-primary custom-margin">Catering </button>
  <button class="btn btn-light custom-margin"> Entertainment </button>
  <button class="btn btn-success custom-margin"> Cultural events </button>

  <div class="row justify-content-center">
  <div class="col-sm-8 my-3">
   <%= simple_form_for :filter, url: event_path, method: :get do |f| %>
   <%= f.input :category, collection: ["Catering", "Entertainment", "Cultural event"], prompt: "SÃ©lectionnez une catÃ©gorie d'Ã©vÃ¨nement" %>
   <%= f.button :submit, "Filter" %>
<% end %>

  </div>
</div>



<div class="catering-sub-event">
  <p class="custom-margin"> Select a catering event </p>
  <button class="btn btn-primary custom-margin">Restaurant </button>
  <button class="btn btn-light custom-margin"> Bar </button>
  <button class="btn btn-success custom-margin"> CafÃ© </button>
</div>

<div class="entertainment-sub-event">
  <p class="custom-margin"> Select an entertainment </p>
  <button class="btn btn-primary custom-margin">Theater </button>
  <button class="btn btn-light custom-margin"> Concert </button>
  <button class="btn btn-success custom-margin"> Show </button>
</div>

<div class="culture-sub-event">
  <p class="custom-margin"> Select a cultural event </p>
  <button class="btn btn-primary custom-margin"> Museum </button>
  <button class="btn btn-light custom-margin"> Cinema </button>
  <button class="btn btn-success custom-margin"> Exposition </button>
</div>


  <div class="row">
    <% @event_places.each do |event_place| %>
      <div class="col-md-4">
        <div class="card mb-4">
          <div class="card-body">
            <h5 class="card-title"><%= event_place.place.name %></h5>
            <p class="card-text"><%= event_place.place.address %></p>
            <ul class="list-group list-group-flush">
              <li class="list-group-item">Duration: <%= event_place.duration %> minutes</li>
              <li class="list-group-item">Distance: <%= event_place.distance %> km</li>
              <li class="list-group-item">Transport mode: <%= event_place.transport_mode %></li>
              <li class="list-group-item">Selected: <%= event_place.selected ? "Yes" : "No" %></li>
            </ul>
            <div class="form-check" style="position: absolute; bottom: 10px; right: 10px;">
              <%= link_to "Vote", vote_event_place_path(event_place), data: { turbo_method: :post }, class:"form-check", type:"checkbox" %>
              <input class="form-check-input" type="radio" name="flexRadioDefault" data-action="change->checkbox-votes#check">
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>

</div>
