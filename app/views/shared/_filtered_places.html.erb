<div class="places-container" data-controller="event">
  <% @places.each do |place| %>
    <%= link_to event_event_places_path(event_id: @event.id, place_id: place.id), data: { turbo_method: :post } do %>
    <div class="card card-index mb-4 <% @event.event_places.include?(place) ? "selected" : "unselected" %>">
      <div class="row">
        <!-- image place -->
        <div class="col-sm-2">
          <% if place.photo.attached? %>
            <%= cl_image_tag place.photo.key, class: "place-picture", style:"height: 100%;" %>
          <% end %>
        </div>
        <!-- descriptif texte -->
        <div class="col-sm-10">
          <div class="card-body">
            <h5 class="card-title"><%= place.name %> - <%= place.category %></h5>
            <br>
            <p class="card-text"><i class="fas fa-map-marker-alt"></i>  <%= place.address %></p>
            <p class="list-group-item"><i class="far fa-clock"></i>  Opening Hours: <%= place.opening_hours.strftime("%H:%M %p") %> </p>
            <p class="list-group-item"><i class="fas fa-info-circle"></i>  Rating: <%= place.rating %>/5</p>

          </div>
          <div style="position: absolute; bottom: 10px; right: 10px;">
          </div>
        </div>
      </div>
    </div>
    <% end %>
  <% end %>
</div>
