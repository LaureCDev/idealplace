<div class="places-container" data-controller="event">
  <% @places.each do |place| %>
    <div class="card card-index mb-4">
      <div class="row">
        <!-- image place -->
        <div class="col-sm-2">
          <% if place.photo.attached? %>
            <%= cl_image_tag place.photo.key, class: "place-picture", style:"height: 100%;" %>
          <% end %>
        </div>
        <!-- descriptif texte -->
        <div class="col-sm-10">
          <div class="card-body">
            <h5 class="card-title"><%= place.name %> - <%= place.category %></h5>
            <p class="card-text"><%= place.address %></p>
            <ul class="list-group">
              <li class="list-group-item">Opening Hours: <%= place.opening_hours %> </li>
              <li class="list-group-item">Distance: <%= place.rating %> km</li>
            </ul>
          </div>
          <div style="position: absolute; bottom: 10px; right: 10px;">
            <%= link_to "choose", event_event_places_path(event_id: @event.id, place_id: place.id), data: { turbo_method: :post } %>
          </div>
        </div>
      </div>
    </div>
  <% end %>
</div>
