<style>
  .nav-link {
    font-family: 'Roboto', sans-serif;
    font-weight: bold;
    /* You can adjust other text properties here */
  }
</style>

<ul class="nav nav-tabs">
  <li class="nav-item">
      <a class="nav-link active" data-bs-toggle="tab" href="#mygroupsSection">MY GROUPS</a>
    </li>
    <li class="nav-item">
      <a class="nav-link" data-bs-toggle="tab" href="#rentedcarsSection">RENTED CARS</a>
    </li>
    <li class="nav-item">
      <a class="nav-link" data-bs-toggle="tab" href="#bookingsSection">MY BOOKINGS</a>
    </li>
</ul>


<div class="container">
  <div class="row justify-content-center">
    <div class="col-lg-12">
      <div class="tab-content">

        <div class="tab-pane fade show active" id="mygroupsSection">
          <div class="groups">

            <div class="d-flex justify-content-between mb-2 p-3 align-items-center">
              <h3 class="card-title">MY GROUPS</h3>
              <br>
              <!-- Button to trigger the popover -->
              <h5>
                <a href="#addGroupModal" id="add-group-btn" class="btn btn-outline-dark">Add a Group</a>
              </h5>
            </div>


            <div class="card-body cards mb-4" style="border-radius: 5px">
              <% @groups.each do |group| %>
                <div class="cars-card card-category d-flex flex-column cards mb-4" style="border-radius: 5px">

                    <div class="row">
                      <% @groups.each do |group| %>
                        <!-- Column for the list -->
                        <div class="col-md-6">
                          <ul class="list-unstyled">
                            <li><i class="fas fa-group"></i> <%= group.name %> </li>
                            <li><i class="fas fa-group"></i>
                              <% group.users.each do |user| %>
                                <%= user.first_name %> <!-- Display users associated with the group -->
                              <% end %>
                            </li>
                          </ul>
                        </div>
                        <!-- Column for the picture -->
                      <% end %>
                    </div>

                    <div class="d-flex justify-content-between mt-auto">
                      <%= link_to "Update", root_path, class: "btn btn-primary" %>
                    </div>

                </div>
              <% end %>
            </div>
          </div>
        </div>



      </div>
    </div>
  </div>
</div>
