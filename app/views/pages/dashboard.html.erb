<ul class="nav nav-tabs mb-4">
  <li class="nav-item">
    <a class="nav-link active text-black" data-bs-toggle="tab" href="#mygroupsSection">MY GROUPS</a>
  </li>
  <li class="nav-item">
    <a class="nav-link text-black" data-bs-toggle="tab" href="#myeventsSection">MY EVENTS</a>
  </li>
  <li class="nav-item">
    <a class="nav-link text-black" data-bs-toggle="tab" href="#othereventsSection">OTHER EVENTS</a>
  </li>
</ul>



<div class="container">
  <div class="row justify-content-center">
    <div class="col-lg-12">
      <div class="tab-content">

        <div class="tab-pane fade show active" id="mygroupsSection">
          <div class="groups">
            <div class="row">
              <% current_user.groups.each do |group| %>
                <% if group.user == current_user %>
                  <div class="col-md-4 mb-3">
                    <div class="card">
                      <div class="card-body">
                        <h5 class="card-title"><%= group.name %></h5>
                        <p class="card-text">Created by: <%= group.user.first_name %> <%= group.user.last_name %></p>
                        <div style="position: absolute; bottom: 20px;">
                          <strong>Group Members:</strong>
                          <% group.group_users.each do |group_user| %>
                              <% if group_user.user.photo.attached? %>
                                <%= cl_image_tag group_user.user.photo.key, class: "avatar" %>
                                <%# <figcaption> <%= group_user.user.first_name %>
                                <%# </figcaption> #%>
                              <% end %>
                          <% end %>
                        </div>
                      </div>
                    </div>
                  </div>
                <% end %>
              <% end %>
            </div>
          </div>
          <%= link_to "Add Group", new_group_path, class: "btn custom-btn mb-2"%>
        </div>

        <div class="tab-pane fade" id="myeventsSection">
          <ul class="nav nav-tabs" id="myEventsTabs" role="tablist">
            <!-- Add your sub-tab buttons here -->
            <li class="nav-item" role="presentation">
              <button class="nav-link active text-black" id="created-tab" data-bs-toggle="tab" data-bs-target="#createdSection" type="button" role="tab" aria-controls="createdSection" aria-selected="true">Created</button>
            </li>
            <li class="nav-item" role="presentation">
              <button class="nav-link text-black" id="voted-tab" data-bs-toggle="tab" data-bs-target="#votedSection" type="button" role="tab" aria-controls="votedSection" aria-selected="false">Voted</button>
            </li>
            <li class="nav-item" role="presentation">
              <button class="nav-link text-black" id="passed-tab" data-bs-toggle="tab" data-bs-target="#passedSection" type="button" role="tab" aria-controls="passedSection" aria-selected="false">Passed</button>
            </li>
          </ul>
          <div class="tab-content mt-3" id="myEventsTabsContent">
            <!-- Add the corresponding events tables here -->
            <div class="tab-pane fade show active" id="createdSection" role="tabpanel" aria-labelledby="created-tab">
              <%= render 'events/index', events: @my_created_events %>
            </div>
            <div class="tab-pane fade" id="votedSection" role="tabpanel" aria-labelledby="voted-tab">
              <%= render 'events/index', events: @my_voted_events %>
            </div>
            <div class="tab-pane fade" id="passedSection" role="tabpanel" aria-labelledby="passed-tab">
              <%= render 'events/index', events: @my_passed_events %>
            </div>
          </div>
        </div>

        <div class="tab-pane fade" id="othereventsSection">
          <ul class="nav nav-tabs" id="otherEventsTabs" role="tablist">
            <!-- Add your sub-tab buttons here -->
            <li class="nav-item" role="presentation">
              <button class="nav-link active text-black" id="otherCreated-tab" data-bs-toggle="tab" data-bs-target="#otherCreatedSection" type="button" role="tab" aria-controls="otherCreatedSection" aria-selected="true">Created</button>
            </li>
            <li class="nav-item" role="presentation">
              <button class="nav-link text-black" id="otherVoted-tab" data-bs-toggle="tab" data-bs-target="#otherVotedSection" type="button" role="tab" aria-controls="otherVotedSection" aria-selected="false">Voted</button>
            </li>
            <li class="nav-item" role="presentation">
              <button class="nav-link text-black" id="otherPassed-tab" data-bs-toggle="tab" data-bs-target="#otherPassedSection" type="button" role="tab" aria-controls="otherPassedSection" aria-selected="false">Passed</button>
            </li>
          </ul>
          <div class="tab-content mt-3" id="otherEventsTabsContent">
            <!-- Add the corresponding events tables here -->
            <div class="tab-pane fade show active" id="otherCreatedSection" role="tabpanel" aria-labelledby="otherCreated-tab">
              <%= render 'events/index', events: @created_events %>
            </div>
            <div class="tab-pane fade" id="otherVotedSection" role="tabpanel" aria-labelledby="otherVoted-tab">
              <%= render 'events/index', events: @voted_events %>
            </div>
            <div class="tab-pane fade" id="otherPassedSection" role="tabpanel" aria-labelledby="otherPassed-tab">
              <%= render 'events/index', events: @passed_events %>
            </div>
          </div>
        </div>

      </div>
    </div>
  </div>
</div>
